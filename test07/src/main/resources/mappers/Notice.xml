<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chunjae.test07.persistence.NoticeMapper">
    <select id="NoticeList" resultType="com.chunjae.test07.entity.Notice">
        select * from notice
    </select>

    <insert id="NoticeInsert">
        insert into notice(default,#{id},#{title},#{content},default)
    </insert>

    <select id="NoticeDetail" resultType="com.chunjae.test07.entity.Notice">
        select * from notice where seq=#{seq}
    </select>

    <update id="NoticeUpdate">
        update notice set (#{id},#{title},#{content})
    </update>

    <delete id="NoticeDelete">
        delete * from notice where seq=#{seq}
    </delete>
</mapper>